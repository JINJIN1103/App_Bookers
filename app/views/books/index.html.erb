<h1>Books</h1>
<!--# 投稿一覧 -->
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
  <tr>
    <td> <%= book.title %></td>
    <td> <%= book.body %></td>
    <td> <%= link_to "Show", book_path(book.id), class: "show"  %> </td>
    <td> <%= link_to "Edit", edit_book_path(book.id), class: "edit"  %></td>
    <td> <%= link_to "Destroy", book_path(book.id),method: :delete,"data-confirm" => "Are you sure?", class: "delete" %></td>
 </tr>
  <% end %>
  </tbody>
</table>

<!-- 新規投稿部分 -->
<h2>New book</h2>
<!--エラー時に表示-->


 <% if @book.errors.any? %>
   <div id=error_explanation>

    <h2>
     <%= @book.errors.count %> errors prohibited this book from being saved:
    </h2>

    <ul>
     <%  @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
     <% end %>
    </ul>
<% end %>
    </div>

<div class="form"><%= form_with model: @book, url:'/books', local:true do |f| %>

  <div class="field">
    
   <% if @book.errors.any? %>
    <div class ="field_with_errors">
   <% end %>
   
     <label>Title</label>
   
   <% if @book.errors.any? %>
    </div>
   <% end %>
  
   <%= f.text_field :title %>
  </div>

  <div class="field">
   <% if @book.errors.any? %>
   <div class ="field_with_errors">
   <% end %>
    <label>Body</label>
    
   <% if @book.errors.any? %>
    </div>
   <% end %>
    
     <%= f.text_area :body %>

  </div>

  <div class="actions"><%= f.submit 'Create Book' %></div>
<% end %>
</div>