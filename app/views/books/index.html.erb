<!-- h1等 -->
<h1>Books#index#ホーム画面</h1>
<p>Find me in app/views/books/index.html.erb</p>

<!-- 投稿一覧 -->
<h2>投稿一覧</h2>
<% @books.each do |book| %>
  <p>タイトル</p>
  <span><%= book.title %></span>
  <span><%= book.body %></span>
  <%= link_to "show", book_show_path(book.id) %>
  <%= link_to "edit", book_edit_path(book.id) %>
  <%= link_to "destroy", book_destory_path(book.id),method: :delete,"data-confirm" => "本当に削除しますか？" %>
<% end %>

<!-- 新規投稿部分 -->
<h2>新規投稿</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <%  @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<!-- form_with -->
<%= form_with model: @book, url:'/books', local:true do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  <h4>本文</h4>
  <%= f.text_area :body %>
  <%= f.submit '投稿' %>
<% end %>
