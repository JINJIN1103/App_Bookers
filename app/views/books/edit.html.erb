<h1>Editing Book</h1>
 <% if @book.errors.any? %>
   <div id=error_explanation>

    <h2>
     <%= @book.errors.count %> errors prohibited this book from being saved:
    </h2>

    <ul>
     <%  @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
     <% end %>
    </ul>
<% end %>
    </div>

<div class="form"><%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>

  <div class="field">
    
   <% if @book.errors.any? %>
    <div class ="field_with_errors">
   <% end %>
   
     <label>Title</label>
   
   <% if @book.errors.any? %>
    </div>
   <% end %>
  
   <%= f.text_field :title %>
  </div>
  
 <div class="field">
   <% if @book.errors.any? %>
   <div class ="field_with_errors">
   <% end %>
    <label>Body</label>
    
   <% if @book.errors.any? %>
    </div>
   <% end %>
    
     <%= f.text_area :body %>

  </div>

  <div class="actions"><%= f.submit 'Update Book' %></div>

<% end %>
  <%= link_to "Show" , "/books/#{@book.id}" %>
  |
  <%= link_to "Back" , "/books" %>
</div>


