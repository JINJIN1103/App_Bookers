<div class="form"><%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
  <label>Title</label>
  <div class="field"> <%= f.text_field :title %></div>
  <label>Body</label>
  <div class="actions"><%= f.text_area :body %></div>
  <div class="actions"><%= f.submit 'Update Book' %></div>
  <%= link_to "Show" , "/books/#{@book.id}" %>
