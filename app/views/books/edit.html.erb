<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <%  @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<div class="form">
<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
  <label>タイトル</label>
  <%= f.text_field :title %>
  <label>本文</label>
  <%= f.text_area :body %>
<div class="actions"><%= f.submit 'Update Book' %></div>
  <%= link_to "Show" , "/books/#{@book.id}" %>
  <a href="/books">Back</a>
</div>
<% end %>